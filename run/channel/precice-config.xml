<?xml version="1.0"?>

<precice-configuration>
  
  <log-filter target="debug" component="" switch="off" />
  <log-filter target="info"  component="" switch="on"/>
  
  <log-output column-separator=" | " log-time-stamp="no"  
              log-time-stamp-human-readable="yes" log-machine-name="no" 
              log-message-type="no" log-trace="yes"/>

  <solver-interface dimensions="3">
    
    <!-- Data fields that are exchanged between the solvers -->
    <data:scalar name="Temperature"/>
    <data:scalar name="Heat_Flux"/>

    <!-- A common mesh that uses these data fields -->
    <mesh name="Fluid_Nodes">
        <use-data name="Temperature"/>
        <use-data name="Heat_Flux"/>
    </mesh>

    <mesh name="Solid_Nodes">
        <use-data name="Temperature"/>
        <use-data name="Heat_Flux"/>
    </mesh>

    <!-- Represents each solver using preCICE. In a coupled simulation, two participants have to be
         defined. The name of the participant has to match the name given on construction of the
         precice::SolverInterface object used by the participant. -->
    
    <participant name="Fluid">
      <!-- Makes the named mesh available to the participant. Mesh is provided by the solver directly. -->
      <use-mesh name="Fluid_Nodes" provide="yes"/>
      <use-mesh name="Solid_Nodes" from="Solid"/>
      <!-- Define input/output of the solver.  -->
      <write-data name="Heat_Flux" mesh="Fluid_Nodes"/>
      <read-data  name="Temperature" mesh="Fluid_Nodes"/>
      <mapping:nearest-projection direction="write" from="Fluid_Nodes" to="Solid_Nodes" constraint="consistent" timing="initial"/>
      <mapping:nearest-projection direction="read"  from="Solid_Nodes" to="Fluid_Nodes" constraint="consistent" timing="initial"/>
    </participant>
    
    <participant name="Solid">
      <use-mesh name="Fluid_Nodes" provide="Fluid"/>
      <use-mesh name="Solid_Nodes" provide="yes"/>
      <write-data name="Temperature" mesh="Solid_Nodes"/>
      <read-data  name="Heat_Flux" mesh="Solid_Nodes"/>
    </participant>

    <!-- Communication method, use TCP sockets, Change network to "ib0" on SuperMUC -->
    <m2n:sockets from="Fluid" to="Solid" network="lo"/>

      <coupling-scheme:serial-explicit>
         <participants first="Solid" second="Fluid"/>
         <max-time value="40.0"/>
         <timestep-length value="1e-2" valid-digits="8"/>
         <exchange data="Heat_Flux" mesh="Solid_Nodes" from="Fluid" to="Solid" />
         <exchange data="Temperature" mesh="Solid_Nodes" from="Solid" to="Fluid" />
         <!--<exchange data="Velocity" mesh="Structure_Nodes" from="STRUCTURE" to="FLUID" initialize="true"/>-->
      </coupling-scheme:serial-explicit>
    
  </solver-interface>
</precice-configuration>
